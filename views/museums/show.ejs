<% layout('/layouts/boilerplate.ejs')%>

    <div class="row" style="margin-top: 30px; margin-bottom: 30px;">
        <div class="col-md-4">
            <div class="text-center" style="margin-bottom: 5%;">
                <h4>
                    <%= theMuseum.title %>
                </h4>
            </div>

            <div class="card" style="margin-bottom: 5%;">
                <div class="card-header">Location</div>
                <div class="card-body">
                  <h5 class="card-title"><%= theMuseum.location %></h5>
                </div>
              </div>

              <div class="card" style="margin-bottom: 5%;">
                <div class="card-header">Price</div>
                <div class="card-body">
                  <h5 class="card-title">$<%= theMuseum.price %></h5>
                </div>
              </div>
        </div>
        <div class="col-md-8">
            <div class="card" style="width: 100%;">
                <img src="<%= theMuseum.image %>" class="card-img-top"
                    alt="Chicago Skyscrapers" />
                <div class="card-body">
                    <h5 class="card-title"><%= theMuseum.title %></h5>
                    <p class="card-text"><%= theMuseum.description %></p>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-row mb-3">
                        <div class="p-2">                            
                            <a class="btn btn-primary" href="/museums/<%= theMuseum._id %>/edit">Edit</a>
                        </div>
                        <div class="p-2">
                            <a class="btn btn-info" href="/museums">All Museum</a>
                        </div>
                        <div class="p-2">                            
                            <form action="/museums/<%= theMuseum._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>