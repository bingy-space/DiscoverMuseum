<% layout('/layouts/boilerplate.ejs')%>

    <div class="row d-flex justify-content-center">
        <!--Grid column-->
        <div class="col-md-6">
            <div class="card" style="margin-top: 30px; margin-bottom: 30px;">
                <div class="card-body">
                    <form action="/museums/<%= museum._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                        <div class="text-center">
                            <h3>Edit Museum</h3>
                            <!-- Title input -->
                            <div class="form-outline mb-4">
                                <input type="text" id="title" name="museum[title]" class="form-control"
                                    value="<%= museum.title %>" required/>
                                <label class="form-label" for="title">Title</label>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Location input -->
                            <div class="form-outline mb-4">
                                <input type="text" id="location" name="museum[location]" class="form-control"
                                    value="<%= museum.location %>" required/>
                                <label class="form-label" for="location">Location</label>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Image Url input -->
                            <div class="form-outline mb-4">
                                <input type="file" name="image" id="image" class="form-control" multiple>
                            </div>
                            <div class="form-outline mb-4">
                                <% museum.images.forEach(function(img, i) {%>
                                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                                    <div class="form-check-inline">
                                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                                    </div>
                                    <label for="image-<%=i%>">Delete</label>
                                <% }) %>
                            </div>

                            <!-- Price input -->
                            <div class="input-group flex-nowrap mb-4">
                                <span class="input-group-text" id="addon-wrapping">$</span>
                                <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                                    aria-describedby="addon-wrapping" id="price" name="museum[price]"
                                    value="<%= museum.price %>" required/>
                                    <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Description input -->
                            <div class="form-outline mb-4">
                                <textarea class="form-control" id="description" rows="4"
                                    name="museum[description]" required><%= museum.description %></textarea>
                                <label class="form-label" for="form4Example3">Description</label>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4">Update Museum</button>
                            <a href="/museums/<%= museum._id %>">Back to Museum</a>

                        </div>
                </div>
                </form>
            </div>
            <!-- Back to All Museum button -->
            <a class="btn btn-warning btn-block" href="/museums">All Museum</a>

        </div>
        <!--Grid column-->
    </div>